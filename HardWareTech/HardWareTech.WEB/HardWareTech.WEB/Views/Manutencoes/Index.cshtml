@model IEnumerable<HardWareTech.DATA.Models.VwProdutoClienteManutencao>

<h1 class="text-center display-4">Listagem de Manutenções</h1>

<div class="d-gird gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Manutencoes" asp-action="Create">Nova Manutenção</a>
</div>
<br />

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert" style="text-align: center;">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
} @if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert" style="text-align: center;">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<table id="myTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFinalizacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeProduto)
                </td>
                @{
                    var styleStatus = "rounded text-white bg-success";
                        if(DateTime.Now.Date > item.DataFinalizacao)
                        {
                        styleStatus = "rounded text-white bg-danger";
                    }
                    else if (DateTime.Now.Date.Equals(item.DataFinalizacao))
                        {
                            styleStatus = "bg-warning";
                        }
                    }
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td class="@styleStatus">
                    @Html.DisplayFor(modelItem => item.DataFinalizacao)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Detalhar</a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal-@item.Id">
                        Deletar
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="DeleteModal-@item.Id" tabindex="-1" aria-labelledby="DeleteModal" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DeleteModal">Excluir Manutenção</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Deseja realmente excluir a manutenção @item.IdProduto ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sim</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>